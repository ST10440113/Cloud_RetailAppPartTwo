@model IEnumerable<Cloud_MVCRetailAppPartTwo.Models.Order>

@{
    ViewData["Title"] = "Order List";
}
<div>
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div class="text-center">
            <h1 class="h3 mb-0 text-white-800">Order List</h1>
            <p class="mb-0">Manage your orders effectively.</p>
        </div>

    </div>
</div>
<p>
    <a asp-action="Create" class="btn btn-outline-light">+ New Order</a>

</p>

@if (!string.IsNullOrEmpty(ViewBag.ErrorMessage))
{
    <div class="alert alert-danger" role="alert">
        @ViewBag.ErrorMessage
    </div>

}
@if (Model != null && Model.Any())
{
    <div class="table">
        <table class="table table-bordered">
            <thead class="table-dark text-light">
                <tr>
                    <th scope="col">Customer First Name</th>
                    <th scope="col">Customer Last Name</th>
                    <th scope="col">Product Name</th>
                    <th scope="col">Quantity</th>
                    <th scope="col">Order Date</th>
                    <th scope="col">Status</th>
                    <th scope="col">Actions</th>
                </tr>
            </thead>
            <tbody class="bg-black text-white">

                @foreach (var order in Model)
                {
                    <tr>
                        <td>@order.Customer.FirstName</td>
                        <td>@order.Customer.LastName</td>
                        <td>@order.Product.ProductName</td>
                        <td>@order.Quantity</td>
                        <td>@order.OrderDate.ToString("yyyy-MM-dd")</td>
                        <td>@order.Status</td>
                        <td>
                            <form asp-action="Delete" method="post" style="display:inline;">
                                <input type="hidden" name="partitionKey" value="@order.PartitionKey" />
                                <input type="hidden" name="rowKey" value="@order.RowKey" />
                                <button type="submit" class="btn btn-outline-light" onclick="return confirm('Are you sure you want to delete this order?');">Delete</button>
                            </form>
                            <form asp-action="Edit" method="get" style="display:inline;">
                                <input type="hidden" name="partitionKey" value="@order.PartitionKey" />
                                <input type="hidden" name="rowKey" value="@order.RowKey" />
                                <button type="submit" class="btn btn-outline-light">Edit</button>
                            </form>
                            <form asp-action="Details" method="post" style="display:inline;">
                                <input type="hidden" name="partitionKey" value="@order.PartitionKey" />
                                <input type="hidden" name="rowKey" value="@order.RowKey" />
                                <button type="submit" class="btn btn-outline-light">Details</button>
                            </form>

                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
}
else
{
    <div class="alert alert-info" role="alert">
        No orders found.
    </div>
}
